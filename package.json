{
  "name": "blog-customizer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.js --env env=prod",
    "start": "webpack serve --config webpack/webpack.config.js --env env=dev",
    "format": "prettier --write .",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "eslint .",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "lint-fix": "npm run lint-fix:ts && npm run lint-fix:styles",
    "lint-fix:ts": "eslint --fix .",
    "lint-fix:styles": "stylelint --fix '**/*.{css,scss}'",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.0.0",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react-webpack5": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@svgr/webpack": "^8.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^10.0.0",
    "css-loader": "^7.0.0",
    "cssnano": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "mini-css-extract-plugin": "^2.0.0",
    "postcss-loader": "^8.0.0",
    "postcss-scss": "^4.0.0",
    "prettier": "^3.0.0",
    "react-refresh": "^0.18.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.0.0",
    "sass-loader": "^16.0.0",
    "storybook": "^8.0.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "typescript-plugin-css-modules": "^5.0.0",
    "url-loader": "^4.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^6.0.0",
    "webpack-dev-server": "^5.0.0",
    "webpack-merge": "^6.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss}": "npm run lint-fix",
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
  }
}
